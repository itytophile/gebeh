{
  "compilerOptions": {
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": false,
    "sourceMap": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "moduleResolution": "bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": ["ts"],
  "exclude": ["polyfill"]
}
